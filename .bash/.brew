#!/usr/bin/env bash

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."
# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils
# Install Bash 4
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

# Install RingoJS and Narwhal
# Note that the order in which these are installed is important; see http://git.io/brew-narwhal-ringo.
#brew install ringojs
#brew install narwhal

# Install more recent versions of some OS X tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep
brew tap josegonzalez/homebrew-php
brew install php55

# These two formulae didn’t work well last time I tried them:
#brew install homebrew/dupes/vim
#brew install homebrew/dupes/screen


# Install other useful binaries
# -----------------------------

# A tool like grep, optimized for programmers
brew install ack

# A tool to count lines of code
brew install cloc

# Tool to manage image metadata
#brew install exiv2

brew install git

#brew install imagemagick

# If you are into text browsing
#brew install lynx

# Node.js
brew install node

# Parallel implementation of gzip
brew install pigz

# The rename command on steroids
brew install rename

# Javascript implementation in Java
#brew install rhino

brew install siege

# Yet another tool to count lines of code
brew install sloccount

# Recursive directory listing command
brew install tree

# Take screenshots of webpages 'webkit2png http://www.google.com/'
brew install webkit2png

# New zlib (gzip, deflate) compatible compressor (100x slower, 5% better compression)
#brew install zopfli

brew tap homebrew/versions
#brew install lua52

# Remove outdated versions from the cellar
brew cleanup
