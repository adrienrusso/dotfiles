# Install native apps
# -------------------
brew tap phinze/homebrew-cask
brew install brew-cask

function installcask() {
    if brew cask info "${@}" | grep "Not installed" > /dev/null; then
        brew cask install "${@}"
    else
        echo "${@} is already installed."
    fi
}

installcask codekit
installcask dropbox
installcask firefox
installcask flux
